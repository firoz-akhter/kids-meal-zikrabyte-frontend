{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts",
    "src/app/admin/children/page.jsx",
    "src/app/admin/dashboard/page.jsx",
    "src/app/admin/deliveries/history/page.jsx",
    "src/app/admin/deliveries/page.jsx",
    "src/app/admin/menus/[id]/edit/page.jsx",
    "src/app/admin/menus/[id]/page.jsx",
    "src/app/admin/menus/create/page.jsx",
    "src/app/admin/menus/page.jsx",
    "src/app/admin/payments/page.jsx",
    "src/app/admin/subscriptions/page.tsx",
    "src/app/parent/children/add/page.jsx",
    "src/app/login/page.jsx",
    "src/app/admin/layout.jsx",
    "src/app/parent/children/page.jsx",
    "src/app/parent/dashboard/page.jsx",
    "src/app/parent/deliveries/page.jsx",
    "src/app/parent/profile/page.jsx",
    "src/app/parent/payments/page.jsx",
    "src/app/parent/subscriptions/page.jsx",
    "src/app/parent/subscriptions/create/page.jsx",
    "src/app/parent/subscriptions/[id]/page.tsx",
    "src/app/register/page.jsx",
    "src/app/parent/layout.jsx",
    "src/components/layout/AdminSidebar.jsx",
    "src/components/auth/ProtectedRoute.jsx",
    "src/app/providers.jsx",
    "src/app/page.jsx",
    "src/app/layout.jsx",
    "src/theme/theme.jsx",
    "src/components/layout/ParentSidebar.jsx"
  ],
  "exclude": ["node_modules"]
}
